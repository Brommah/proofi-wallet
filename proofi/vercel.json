{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/health", "destination": "/health.html" },
    { "source": "/game", "destination": "/game.html" },
    { "source": "/portal", "destination": "/portal.html" },
    { "source": "/ecosystem", "destination": "/ecosystem.html" },
    { "source": "/cryptoquest", "destination": "/cryptoquest.html" },
    { "source": "/trustrate", "destination": "/trustrate.html" },
    { "source": "/dropvault", "destination": "/dropvault.html" },
    { "source": "/app", "destination": "/app/index.html" },
    { "source": "/app/(.*)", "destination": "/app/$1" },
    { "source": "/verify", "destination": "/verify.html" },
    { "source": "/", "destination": "/landing.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://proofi.ai, https://proofi-virid.vercel.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ]
}
